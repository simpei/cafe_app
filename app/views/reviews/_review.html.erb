<li id="review-<%= review.id %>">
  <span class="user"><%= link_to current_user.username, review.user %></span>
  <span class="content">
    <%= review.content %>
    <%= image_tag review.picture.url if review.picture? %> 
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(review.created_at) %> ago.
  
  <% if current_user?(review.user) %>
      <%= link_to "delete", review , method: :delete, data: { confirm: "削除しますか？" } %>
    <% end %>
    </span>
</li>